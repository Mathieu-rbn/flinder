<div class="uk-card uk-card-default uk-width-1-2@m uk-box-shadow-small flat_card flat-box uk-border-rounded <%= 'active' if index == 0 %>" data-flat-id='<%= flat.id %>'>
    <div class="uk-card-media-top uk-border-rounded">
      <!-- <img data-src="https://images.unsplash.com/photo-1470619681920-17fd5fd2f094?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=634&q=80" width="400" height="500" alt="" class="uk-border-rounded" uk-img > -->

      <%= cl_image_tag(flat.photos.first.photo, :width=>400, :height=>350, :crop=>"fill")%>

    </div>
    <div>
      <h4 class="uk-margin-small-left uk-margin-top uk-margin-remove-bottom uk-card-title uk-text-bold"><%= flat.title %></h4>
      <p class="uk-margin-small-left uk-text-small uk-margin-remove-top uk-card-title"><span uk-icon="location"></span><%= flat.address %></p>
      <hr>
    </div>
     <div class="uk-card-body uk-flex uk-padding-remove-top justify-content-center align">
          <p class="uk-margin-remove mr-2 lead"><i class="fas fa-euro-sign fa-lg mx-2"></i><%= flat.rent %></p>
          <p class="uk-margin-remove mr-2 lead"><i class="fas fa-home fa-lg mx-2"></i><%= flat.square_meter%></p>
          <p class= "uk-margin-remove mr-2 lead"><i class="fas fa-bed fa-lg mx-2"></i><%= flat.bedroom + 1 %></p>

     </div>
     <div class="uk-card-footer uk-padding-remove-horizontal">
       <div class ="uk-container uk-flex uk-flex-center">
       <%= link_to flat_viewings_path(flat, viewing: {like: false}), method: :post, remote: true, id: "reject-btn", class: "uk-button uk-button-danger uk-button-large like-btn uk-border-pill ", "data-flat-id" => flat.id  do %>
           <span  uk-icon="icon: close; ratio: 2"></span>
       <% end %>
         <%= link_to flat_path(flat), id: "info-btn", class: "uk-button uk-button-default uk-button-large like-btn uk-border-pill" do %>
             <span uk-icon="icon: info; ratio: 2"></span>
         <% end %>
       <%= link_to flat_viewings_path(flat, viewing: {like: true}), method: :post, remote: true, id: "sweet-alert-demo", id: "accept-btn" ,class: "uk-button uk-button-danger uk-button-large like-btn uk-border-pill", "data-flat-id" => flat.id   do %>
           <span uk-icon="icon: heart; ratio: 2"></span>
       <% end %>
      </div>
       <div class="uk-card-footer uk-margin-top">
      </div>
   </div>
 </div>

