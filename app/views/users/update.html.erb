<%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password" } %>

  <H2>My profile</h2>
        <%= f.input :first_name, placeholder:'First Name'  %>
        <%= f.input :last_name, placeholder:'Last Name'  %>
        <%= f.input :mobile, placeholder:'mobile'  %>

      <H2>Photos</h2>
      <%= f.input :photo, as: :file, hint: 'Upload your home picture' %>

      <H2>My preferences</h2>
        <%= f.input :district, as: :check_boxes, collection: ['Mitte', 'Charlottenburg', 'Kreuzberg','Prenzlaeur Berg', 'Schöneberg', 'Friedrichshain', 'Wilmesdorf', 'Neukölln','Tiergarten', 'Steglitz', 'Friedenau'],hint: 'Kreuzberg, Neukölln' %>

        <%= f.input :street  %>
        <%= f.input :post_code, placeholder: 'add your postcode' %>
        <%= f.input :city, as: :radio_buttons, collection: ['Berlin', 'London', 'Paris', 'Amsterdam'] %>

        <%= f.input :total_rent, as: :decimal %>
        <%= f.input :property_type,as: :radio_buttons, collection: ['House', 'Flat'], selected: 'Flat'  %>
        <%= f.input :square_meter, as: :integer %>
        <%= f.input :bathroom, as: :radio_buttons, collection: 1..3, selected: 1   %>
        <%= f.input :bedroom, as: :radio_buttons, collection: ['1','2','3','4','5','6+']   %>
        <%= f.input :type_heating, as: :radio_buttons, collection: ['Central heating', 'Gaz', 'Electricity'] %>
        <%= f.input :year_construction, as: :check_boxes, collection: ['before 1900','1900-1945','1945-1960','1960-1990','1990-2019'] %>
        <%= f.input :vacant_from, as: :date %>

    <%= f.button :submit, "Update" %>
