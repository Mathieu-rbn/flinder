<div class="uk-background-default container d-flex align-content-center vh-75 rounded">
  <%= simple_form_for @flat do |f| %>
    <!-- Location -->
    <!-- <uk-h6>Location</h6> -->
      <hr class="uk-divider-icon">
        <%= f.input :address, placeholder:'Rudi-Dutschke-Straße 26, 10969 Berlin', id:"flat_address"  %>
        <%= f.input :district, as: :select, collection: ['Mitte', 'Charlottenburg', 'Kreuzberg','Prenzlaeur Berg', 'Schöneberg', 'Friedrichshain', 'Wilmesdorf', 'Neukölln','Tiergarten', 'Steglitz', 'Friedenau'], selected: 'Mitte'%>
    <!-- Home details -->
    <!-- <uk-h4>House details</h4> -->
      <hr class="uk-divider-icon">
        <%= f.input :title, hint: 'maximum 50 characters', placeholder: 'Beautiful flat in the heart of Mitte', maxlength: 50 %>
        <%= f.input :description, hint: 'maximum 290 characters', placeholder: 'This 2 bedroom flat is close to the best coding school in the world : Le Wagon', minlength: 80, maxlength: 290 %>
        <%= f.input :property_type,as: :select, collection: ['House', 'Flat'], selected: 'Flat'  %>
        <%= f.input :bathroom, as: :select, collection: 1..3, selected: 1   %>
        <%= f.input :bedroom, as: :select, collection: ['1','2','3','4','5','6+'], selected: 2   %>
        <%= f.input :type_heating, as: :select, collection: ['Central heating', 'Gaz', 'Electricity'], selected:'Central heating'  %>
        <%= f.input :square_meter, as: :integer, placeholder: '80 sm' %>
        <%= f.input :total_rent, as: :decimal, placeholder: '800 euros' %>
        <%= f.input :vacant_from, as: :date %>
        <!--   <%= f.input :vacant_from, as: :string, input_html: {class: 'form_datepicker'} %> -->

  <fieldset class="form-group check_boxes required user_fruit">
    <legend class="col-form-label pt-0">House Equipement <abbr title="required">*</abbr>
    </legend>
      <small class="form-text text-muted">Select the equipement you want to have</small>
      <input type="hidden" name="user[fruit][]" value=""><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="apple" name="user[fruit][]" id="user_fruit_apple">

        <label class="form-check-label collection_check_boxes" for="user_fruit_lime">Garage</label></div><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="mango" name="user[fruit][]" id="user_fruit_mango">

        <label class="form-check-label collection_check_boxes" for="user_fruit_apple">Elevator</label></div><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="banana" name="user[fruit][]" id="user_fruit_banana">

        <label class="form-check-label collection_check_boxes" for="user_fruit_banana">Furnished</label></div><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="cherry" name="user[fruit][]" id="user_fruit_cherry">

        <label class="form-check-label collection_check_boxes" for="user_fruit_cherry">Balcony</label></div><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="coconut" name="user[fruit][]" id="user_fruit_coconut">

        <label class="form-check-label collection_check_boxes" for="user_fruit_coconut">Cave</label></div><div class="form-check form-check-inline"><input class="form-check-input check_boxes required" type="checkbox" value="grape" name="user[fruit][]" id="user_fruit_grape">

        <label class="form-check-label collection_check_boxes" for="user_fruit_grape">Open Kitchen</label></div><div class="form-check form-check-inline">

       </fieldset>


    <uk-h4>ADD YOUR HOME PICTURES</h4>
      <hr class="uk-divider-icon">
        <%= f.input :photos, as: :file, label: false, input_html: {multiple: true} %>
        <%= f.submit "Save", class:"uk-button uk-border-pill uk-button-danger uk-scrollspy-inview uk-animation-fade text-center mb-3"  %>
    <% end %>
  </div>
</div>

