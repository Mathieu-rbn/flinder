<div id="swipe_hammer" width="1000"height="1000">
<%= render "carousel" %>
<!-- Page Content -->
<section class="py-5">
  <div class="container">
    <p class="lead"><%= @flat.city %>, <%= @flat.district %>, <%= @flat.street %></p>
    <h1 class="font-weight-light"><%= @flat.title %></h1>
    <div class="container d-flex flow-row mb-3">
      <p class="mx-1" ><i class="fas fa-home mr-1"></i>Number of Rooms</p>
      <p class="mx-1" ><i class="fas fa-home mr-1"></i>Rent per Month</p>
      <p class="mx-1" ><i class="fas fa-home mr-1"></i>Squaremeters</p>
    </div>
    <!-- Flat Description -->
    <h5 class="collapsed" data-toggle="collapse" href="#collapseOne" >Description</h5>
    <p class="lead" id="collapseOne" class="collapse" role="tabpanel"><%= @flat.description %></p>
    <!-- Flat Extras -->
    <h5 class="swipe" data-toggle="collapse" href="#collapseTwo" >Extras</h5>
    <div class="container" class="lead" id="collapseTwo" class="collapse" role="tabpanel">
    <ul>
      <li>Item 1</li>
      <li>Item 1</li>
      <li>Item 1</li>
      <li>Item 1</li>
    </ul>
  </div>
  <!-- Flat Location -->
  <h5 >Flat Location</h5>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
</section>


</div>

<% content_for :after_js do  %>
<%= javascript_pack_tag "swipe" %>
<% end %>
