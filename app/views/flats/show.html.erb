<div class="container">
  <div class="flat_card">
        <%= link_to "Back", flats_path %>
        <!-- Flat Description -->
        <h5 class="collapsed" data-toggle="collapse" href="#collapseOne" >Description</h5>
        <p class="lead" id="collapseOne" class="collapse" role="tabpanel"><%= @flat.description %></p>
        <!-- Flat Extras -->
        <h5 class="collapsed" data-toggle="collapse" href="#collapseTwo" >Extras</h5>
        <div class="container d-flex flex-wrap mb-3 ">
              <p class="mx-1" ><i class="fas fa-bed mr-1"></i><%= @flat.bedroom%></p>
              <p class="mx-1" ><i class="fas fa-bath mr-1"></i><%= @flat.bathroom%></p>
              <p class="mx-1" ><i class="fas fa-euro-sign mr-1"></i><%= @flat.rent %></p>
              <p class="mx-1" ><i class="fas fa-burn mr-1"></i><%= @flat.type_heating %></p>
              <p class="mx-1" ><i class="fas fa-ticket-alt mr-1"></i><%= @flat.vacant_from %></p>
              <p class="mx-1" ><i class="fas fa-home mr-1"></i><%= @flat.square_meter %></p>
            </div>
      <!-- Flat Location -->
      <h5>Flat Location</h5>
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
    </section>
  </div>

</div>

