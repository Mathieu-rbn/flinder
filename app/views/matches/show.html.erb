<header class="py-2 bg-image-full" style="background-image: url('https://unsplash.it/1900/1080?image=1076');" >
    <img class="img-fluid d-block mx-auto" src="https://uidesign.gbtcdn.com/gb_blog/author/Steve-Lowry-2.png" alt="">
</header>
<br>
<section class="py-2">
  <div class="py-3 text-center">
    <div class= "masthead text-white text-center">
      <button type="button" class="btn btn-primary btn-lg">Send a message</button>
    </div>
  </div>
  <div class= "container">
    <div class="card p-3 mb-2">
      <p>
        <%= @flat.description%>
      </p>
    </div>
  </div>
</section>
<p><%#= @flat.title%></p>
<p><%#= @flat.user_id%></p>

<section class="py-1">
  <div class="container">
    <div class="card p-2 mb-2">
      <p class="lead"><%= @flat.id%> <%= @flat.city%>, <%= @flat.district%>, <%= @flat.street%></p>
      <h1 class="font-weight-light"> Lorem ipsum dolor sit <%= @flat.title%></h1>
    </div>
    <div class="card p-3 mb-2">
      <div class="container d-flex flow-row mb-3">
        <div class="mainCriteria flex-item"></div>
          <div class="is24qa-kaltmiete is24-value font-semibold"><p class="mx-1" ><i class="fas fa-home mr-1"></i><%= @flat.title%></p>
          </div>
          <div class="mainCriteria flex-item"></div>
            <div class="is24qa-kaltmiete is24-value font-semibold"><p class="mx-1" ><i class="fas fa-home mr-1"></i><%= @flat.total_rent%></p>
            </div>
          </div>
          <div class="mainCriteria flex-item"></div>
            <div class="is24qa-kaltmiete is24-value font-semibold"><p class="mx-1" ><i class="fas fa-home mr-1"></i><%= @flat.square_meter%> m2</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="card p-3 mb-2">
      <div class="container d-flex flow-row mb-3">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= @flat.photo%> alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1540518614846-7eded433c457?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=739&q=80" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1493663284031-b7e3aefcae8e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</div>
</div>

</section>

