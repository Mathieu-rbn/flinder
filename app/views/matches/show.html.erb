<div class="uk-container">
<div class="uk-card uk-card-default uk-width-1-2@m">
  <%= link_to matches_path do %>
      <span uk-icon="chevron-left" class="uk-margin-remove"></span> Back
  <% end %>
    <div class="uk-card-header">
            <div class="uk-align-center">
                <%= cl_image_tag @flat.user.profile_photo,  class: "uk-align-center uk-border-pill", :width=>300, :height=>300, :crop=>"fill"%>
            </div>
        <div class="uk-grid-small uk-flex-middle" uk-grid>
          <div class="uk-width-expand">
            <h5 class="uk-card uk-text-center "><%= @flat.user.first_name %> <%= @flat.user.last_name %></h5>
               <hr class="uk-divider-icon">
               <dl class="uk-description-list">
                 <dt>Who I am</dt>
                 <dd><%= @flat.user.profile_description %></dd>
               </dl>
            </div>
        </div>
    </div class="uk-margin-bottom">
    <%= link_to "Send a message", chats_path(), class: "uk-button uk-button-danger uk-width-1-1 uk-margin-small-top uk-border-pill uk-text-bold" %>
    </div>
</div>
</div>

