<div class="uk-container">
<h4 class="uk-text-bold uk-text-center">Your Matches</h4>
  <% @matches.each do |match| %>
  <div>
    <div class="uk-child-width-1-2@s">
        <% flat = match.other_party(current_user.flat) %>
        <div class="uk-card uk-card-default uk-card-small uk-card-body">
          <h5 class="uk-card uk-text-bold uk-text-center"><%= flat.title %></h5>
          <div><%= cl_image_tag flat.photos.first.photo, height: 300, width: 400, crop: :fill%></div>
          <div class="uk-card-body uk-flex justify-content-center align">
          <p class="uk-margin-remove mr-2 lead"><i class="fas fa-euro-sign fa-lg mx-2"></i><%= flat.rent %></p>
          <p class="uk-margin-remove mr-2 lead"><i class="fas fa-home fa-lg mx-2"></i><%= flat.square_meter%> sm</p>
          <p class= "uk-margin-remove mr-2 lead"><i class="fas fa-bed fa-lg mx-2"></i><%= flat.bedroom + 1 %></p>

     </div>
          <%= link_to "Send a message", chats_path(), class: "uk-button uk-button-danger uk-width-1-1 uk-margin-small-top uk-border-pill uk-text-bold" %>
          <%= link_to "More details about person", match_path(match), class: "uk-button uk-button-primary uk-width-1-1 uk-margin-small-top uk-border-pill uk-text-bold" %>
        </div>
  </div>
  <br>
  </div>
  <% end %>
</div>

